<!DOCTYPE html>
<html>
<head>
	<title>HappyCompany</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet" type="text/css">
</head>
<body>

	<header>
		<div class="container">
			<h1 class="logo">HappyCompany</h1>
			<ul class="nav">
				<% if user_signed_in? %>
					<li <% if current_page?(questions_path) %>class="active"<% end %>>
						<%= link_to 'Questions', questions_path %>
					</li>
					<li <% if current_page?(companies_path) %>class="active"<% end %>>
						<%= link_to 'Companies', companies_path %>
					</li>
					<li <% if current_page?(edit_user_registration_path) %>class="active"<% end %>>
						<%= link_to 'Settings', edit_user_registration_path %>
					</li>
					<li <% if current_page?(destroy_user_session_path) %>class="active"<% end %>>
						<%= link_to "Logout", destroy_user_session_path, :method => :delete %>
					</li>
				<% else %>
					<li <% if current_page?(root_path) %>class="active"<% end %>>
						<%= link_to 'Home', root_path %>
					</li>
					<li <% if current_page?(new_user_registration_path) %>class="active"<% end %>>
						<%= link_to 'Create Account', new_user_registration_path %>
					</li>
					<li <% if current_page?(new_user_session_path) %>class="active"<% end %>>
						<%= link_to 'Login', new_user_session_path %>
					</li>
				<% end %>
			</ul>
		</div><!-- /container -->
	</header>


	<div class="container">
		<ul>
			<li><b>Time.zone.now</b> <%= Time.zone.now %></li>
			<li><b>1.day.from_now</b> <%= 1.day.from_now %>
			<li><b>4.hours.from_now</b> <%= 4.hours.from_now %>
		</ul>

		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

		<%= yield %>

	</div><!-- /container -->
</body>
</html>
