<!DOCTYPE html>
<html>
<head>
	<title>HappyCompany</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<link href="xhttp://fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet" type="text/css">
</head>
<body>

	<div class="navbar navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">HappyCompany</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<% if user_signed_in? %>
					<li <% if current_page?(questions_path) %>class="active"<% end %>>
						<%= link_to 'Question', questions_path %>
					</li>
					<li <% if current_page?(timers_path) %>class="active"<% end %>>
						<%= link_to 'Timers', timers_path %>
					</li>
					<li <% if current_page?(answers_path) %>class="active"<% end %>>
						<%= link_to 'Previously', answers_path %>
					</li>
					<li <% if current_page?(companies_path) %>class="active"<% end %>>
						<%= link_to 'Companies', companies_path %>
					</li>
					<li <% if current_page?(edit_user_registration_path) %>class="active"<% end %>>
						<%= link_to 'Settings', edit_user_registration_path %>
					</li>
					<li <% if current_page?(admin_index_path) %>class="active"<% end %>>
						<%= link_to 'Admin', admin_index_path %>
					</li>
					<li>
						<%= link_to "Logout", destroy_user_session_path, :method => :delete %>
					</li>
					<li class="dropdown">
						<div class="dropdown-trigger"><%= image_tag avatar_url(current_user, 40) %></div>
						<div class="dropdown-menu">
							<ul>
								<li><%= link_to 'Settings', edit_user_registration_path %></li>
								<li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
							</ul>
						</div>
					</li>
					<% else %>
					<li <% if current_page?(root_path) %>class="active"<% end %>>
						<%= link_to 'Home', root_path %>
					</li>
					<li <% if current_page?(new_user_registration_path) %>class="active"<% end %>>
						<%= link_to 'Create Account', new_user_registration_path %>
					</li>
					<li <% if current_page?(new_user_session_path) %>class="active"<% end %>>
						<%= link_to 'Login', new_user_session_path %>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>

	<div class="container" id="wrap">

<!-- 		<ul>
			<li><b>Time.zone.now</b> <%= Time.zone.now %></li>
			<li><b>1.day.from_now</b> <%= 1.day.from_now %>
			<li><b>4.hours.from_now</b> <%= 4.hours.from_now %>
			</ul> -->

			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>

			<%= yield %>

	</div><!-- /container -->

	<footer>
		<div class="container">
			<div class="row">
				Copyright Â© 2014, Assembly Made, Inc. All rights reserved.
			</div>
		</div>
	</footer>
</body>
</html>
