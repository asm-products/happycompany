<h1>Listing timers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Timedate start</th>
      <th>Timedate end</th>
      <th>Lenght</th>
      <th>Recurring</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timers.each do |timer| %>
      <tr>
        <td><%= timer.name %></td>
        <td><%= timer.desc %></td>
        <td><%= timer.timedate_start %></td>
        <td><%= timer.timedate_end %></td>
        <td><%= timer.lenght %></td>
        <td><%= timer.recurring %></td>
        <td><%= timer.question_id %></td>
        <td><%= link_to 'Show', timer %></td>
        <td><%= link_to 'Edit', edit_timer_path(timer) %></td>
        <td><%= link_to 'Destroy', timer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

